<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_marginTop="63dp"
        app:layout_constraintTop_toTopOf="parent">

        <!--
            source:放在assets的svga文件
        -->
        <com.opensource.svgaplayer.SVGAImageView
            android:id="@+id/svga_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoPlay="true"
            app:source="noarmal_bg0.svga" />

        <com.opensource.svgaplayer.SVGAImageView
            android:id="@+id/svga_gift_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoPlay="true"
            app:source="normal_gift_box1.svga" />

        <com.opensource.svgaplayer.SVGAImageView
            android:id="@+id/svga_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoPlay="true"
            app:source="normal_light2.svga" />

        <com.opensource.svgaplayer.SVGAImageView
            android:id="@+id/svga_particle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoPlay="true"
            app:source="noarmal_particle3.svga" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


